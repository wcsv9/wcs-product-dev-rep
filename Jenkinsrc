pipeline {
    agent none
    
        stages {
        stage('checking out') {
            agent { label 'wcsv9' }
            steps { 
             echo "Checking out to Mounted Volume"
	     checkout scm
              
            }
        }
            stage('Creating WCB Commerce Build') {
            agent { label 'wcsv9' }
                steps { 
             echo "Building Image in Utility Container"
                    sh 'docker exec -i wcbd-server-1 bash -c  "cd /opt/WebSphere/CommerceServer90/wcbd/ ; ./setenv ; ./wcbd-ant -buildfile wcbd-build.xml -Dbuild.type=local -Dapp.type=$apptype -Dbuild.label=$label -Dwork.dir=/opt/WebSphere/CommerceServer90/wcbd && mv /opt/WebSphere/CommerceServer90/wcbd/dist/server/wcbd-deploy-server-local-"$apptype"-"$label".zip /opt/deploy && rm -rf /opt/WebSphere/CommerceServer90/wcbd/source/demo && rm -rf /opt/WebSphere/CommerceServer90/wcbd/working/* "'
              
            }
            }
			
           stage('Unpacking Deploy package') {
            agent { label 'wcsv9' }
                steps { 
                            
                   dir ('/data/Deploy') {
                   sh 'rm -rf /data/Deploy/CustDeploy/CustDeploy/*'
                  sh 'unzip wcbd-deploy-server-local-"$apptype"-"$label".zip -d /data/Deploy/CustDeploy/CustDeploy'
             
              }
                    
            }
            }
		 stage('Updating Image with Changes ') {
            agent { label 'wcsv9' }
                steps { 
                    dir ('/data/Deploy/CustDeploy/') {
                    sh 'docker build -f Dockerfile."$apptype" . -t 192.168.17.90:5000/"$apptype"-app:"$image"'
                    
                    }
            }
            }	        
		
		stage('Pushing to Repo ') {
            agent { label 'wcsv9' }
                steps { 
                    dir ('/data/Deploy/CustDeploy/CustDeploy') {
                    sh 'docker push 192.168.17.90:5000/"$apptype"-app:"$image"'
		   
                    
                    }
            }
            }
			stage('Updating Pod') {
            agent { label 'wcsv9' }
                steps { 
		   
                    sh 'export KUBECONFIG=/etc/kubernetes/admin.conf && kubectl set image deployment/demoqaauth"$apptype"-app "$apptype"-app=192.168.17.90:5000/"$apptype"-app:"$image" && kubectl rollout status deployment demoqaauth"$apptype"-app'
                  
                    
            }
            }
	    stage('Running Test and Checking Title') {
		 
            agent { label 'wcsv9' }
            steps { 
	    wrap([$class: 'Xvfb', screen: '1440x900x24']) {
             sh "cd /data/wcscode && mvn  install"
              }
            }
        }
		}
            
             post {
            failure {
                sh 'curl -D- -u tariq.mustafa\@royalcyber\.com:6ZPdjgd6AjR29tksYOW9EB9F -X POST --data '{"fields":{"project":{"key": "MSI"},"summary": "Jenkins Build Failed","description": "Build URL: $BUILD_URL","issuetype": {"name": "Bug"}}}' -H "Content-Type: application/json" https://royalcyber.atlassian.net/rest/api/2/issue/'
            }
            success {
                emailext(
                    subject: 'Deployment demoqaauth"$apptype"-app Passed',
                    body: "Build URL: $BUILD_URL",
                    to: "tariq.mustafa@royalcyber.com",
                    from: "tariq.mustafa@royalcyber.com"
                )
            }
        }
		
            
        
}
