		</method>

		<method name="updateOrderShippingInfo" httpMethod="PUT" path="@self/shipping_info">
			<template>
				<![CDATA[{
					"x_calculationUsage" : "$calculationUsage",
					"orderId" : "$orderId",
					"shipModeId" : "$shipModeId",
					"addressId" : "$addressId",
					"requestedShipDate" : "$requestedShipDate",
