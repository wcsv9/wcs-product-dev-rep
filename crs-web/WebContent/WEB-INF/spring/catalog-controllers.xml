<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">  
  <bean id="searchDisplay" class="com.ibm.commerce.store.mvc.controller.spring.RESTActionController"> 
    <property name="authenticate" value="0"/>
    <property name="https" value="0"/>
    <property name="generic" value="1"/>
    <property name="parameter" value="searchDisplay.searchDisplay"/> 
    <property name="credentialsAccepted" value="P"/>
  </bean>  
  <bean id="productDisplay" class="com.ibm.commerce.store.mvc.controller.spring.BrowsingRESTActionController"> 
    <property name="authenticate" value="0"/>  
    <property name="https" value="0"/>  
    <property name="generic" value="1"/>
    <property name="parameter" value="productLayout.productLayout"/>
    <property name="credentialsAccepted" value="P"/>
  </bean> 
</beans>