<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">  
  <bean id="PromotionFreeGiftChoicesView" class="com.ibm.commerce.store.mvc.view.spring.StoreInternalResourceView"> 
    <property name="url" value="/Snippets/Marketing/Promotions/PromotionChoiceOfFreeGiftsPopupContent.jsp"/> 
  </bean>
  <bean id="AjaxPromotionCodeDisplayView" class="com.ibm.commerce.store.mvc.view.spring.StoreInternalResourceView"> 
    <property name="url" value="/Snippets/Marketing/Promotions/PromotionCodeDisplay.jsp"/> 
  </bean>
  <bean id="CouponsErrorView" class="com.ibm.commerce.store.mvc.view.spring.StoreInternalResourceView"> 
    <property name="url" value="/GenericError.jsp"/>  
    <property name="credentialsAccepted" value="P"/> 
  </bean> 
  <bean id="DiscountDetailsDisplayView" class="com.ibm.commerce.store.mvc.view.spring.StoreInternalResourceView"> 
    <property name="url" value="/ShoppingArea/DiscountSection/DiscountDetailsDisplay.jsp"/> 
  </bean>
  <bean id="EmailESpotView" class="com.ibm.commerce.store.mvc.view.spring.StoreInternalResourceView"> 
    <property name="url" value="/EmailTemplates/Common/eMarketingSpotDisplay.jsp"/> 
  </bean>   
  <bean id="ContentSpotView" class="com.ibm.commerce.store.mvc.view.spring.StoreInternalResourceView"> 
    <property name="url" value="/Snippets/Marketing/Content/ContentSpotDisplay.jsp"/> 
  </bean>
  <bean id="AjaxIntelligentOfferDisplayView" class="com.ibm.commerce.store.mvc.view.spring.StoreInternalResourceView"> 
