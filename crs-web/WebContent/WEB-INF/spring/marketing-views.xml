  <bean id="ContentAreaESpotView" class="com.ibm.commerce.store.mvc.view.spring.StoreInternalResourceView"> 
    <property name="url" value="/Widgets/ESpot/ContentRecommendation/ContentRecommendation.jsp"/>  
    <property name="credentialsAccepted" value="P"/> 
    <property name="generic" value="1"/>
  </bean>  
  <bean id="CategoriesESpotView" class="com.ibm.commerce.store.mvc.view.spring.StoreInternalResourceView"> 
    <property name="url" value="/Widgets/ESpot/CategoryRecommendation/CategoryRecommendation.jsp"/>  
