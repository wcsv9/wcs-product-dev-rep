<_config:rest-action-config xmlns:_config="http://www.ibm.com/xmlns/prod/commerce/foundation/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.ibm.com/xmlns/prod/commerce/foundation/config ../../xsd/rest-action-config.xsd ">
	<resource path="{serverHost}/{contextPath}/store/{storeId}/storeLocatorB2C" name="StoreLocatorB2CHandler">
	 <serverParam name="serverHost">$WCParam.serverHost</serverParam>
	 <serverParam name="contextPath">$WCParam.contextPath</serverParam>
	 <serverParam name="storeId">$WCParam.storeId</serverParam>
		
		<method name="getStoreData" httpMethod="GET" path="getStoreData/{state}/{zipcode}/{within}/{stateOnly}/{latitude}/{longitude}/{fromCheckout}/{city}/{storeType}{assetStore}">
			<var name="storeId">$WCParam.storeId</var>
			<var name="state">$WCParam.state</var>
			<var name="zipcode">$WCParam.zipcode</var>
			<var name="within">$WCParam.within</var>
			<var name="stateOnly">$WCParam.stateOnly</var>
			<var name="latitude">$WCParam.latitude</var>
			<var name="longitude">$WCParam.longitude</var>
			<var name="fromCheckout">$WCParam.fromCheckout</var>
			<var name="city">$WCParam.city</var>
			<var name="storeType">$WCParam.storeType</var>
			<var name="assetStore">$WCParam.assetStore</var>
		</method>
		
		<method name="b2COrderUpdate" httpMethod="POST" path="b2COrderUpdate">
			<template>
				<![CDATA[{
					"storeId" : "$storeId",
					"catalogId" : "$catalogId",
					"orderId"  : "$orderId",
					"shipStoreId"  : "$shipStoreId",
					"shipEmail"  : "$shipEmail",
					"orderItemId"  : "$orderItemId",
					"longitude"  : "$longitude",
					"storeName"  : "$storeName",
					"assetStore"  : "$assetStore",
					"latitude" : "$latitude"
				}]]>
			</template>
		</method>
		
	</resource>	
	

	
