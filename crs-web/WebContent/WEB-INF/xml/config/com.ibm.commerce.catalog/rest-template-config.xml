<_config:rest-action-config xmlns:_config="http://www.ibm.com/xmlns/prod/commerce/foundation/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.ibm.com/xmlns/prod/commerce/foundation/config ../../xsd/rest-action-config.xsd ">
	<resource path="{serverHost}/{contextPath}/store/{storeId}/page_design?q=byProductId" name="productLayout">
	 <serverParam name="serverHost">$WCParam.serverHost</serverParam>
	 <serverParam name="contextPath">$WCParam.contextPath</serverParam>
	 <serverParam name="storeId">$WCParam.storeId</serverParam>
		 <method name="productLayout" httpMethod="GET" path="">
		 	<template>
		 		<![CDATA[{
          	       "productId" : "$productId",
          	       "partNumber" : "$partNumber",
          	       "catalogId" : "$catalogId",
          	       "categoryId" : "$categoryId",
          	       "identifier" : "$identifier",
          	       "catalogIdentifier" : "$catalogIdentifier",
          	       "URL" : "$URL"
          	   	}]]>
		 	</template>
		 </method>
	</resource>
	<resource path="{serverHost}/{contextPath}/store/{storeId}/searchdisplay" name="searchDisplay">
	 <serverParam name="serverHost">$WCParam.serverHost</serverParam>
	 <serverParam name="contextPath">$WCParam.contextPath</serverParam>
	 <serverParam name="storeId">$WCParam.storeId</serverParam>
		<method name="searchDisplay" httpMethod="GET" path="bySearchTerm?searchTerm={searchTerm}">
		<var name="searchTerm">$WCParam.searchTerm</var>
		<template>
			<![CDATA[{
   					"storeId"   : "$storeId",
					"catalogId" : "$catalogId"
         		}
			]]>
		</template>
		</method>
	</resource>	
</_config:rest-action-config>
